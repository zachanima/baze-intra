<html>
  <head>
    <title>Baze IntraNet</title>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>
  <body>

    <% 2.times do %>
      <div id="top"<%= cycle '', raw(' class="hidden"') %>>
        <ul class="business" id="nav">
          <%= render Supplier.business %>
          <li><%= link_to '+', new_supplier_path %></li>
        </ul>

        <% if params[:action] == 'show' %>
          <div>
            <%= content_tag :div, @supplier.name, :id =>'supplier_name', :class => @supplier.kind %>
            <div id="supplier_customer_id"><%= @supplier.customer_id %></div>
          </div>

          <div>
            <%= @supplier.contact %><br />
            <%= @supplier.phone %><br />
            <%= mail_to @supplier.email %><br />
          </div>

          <div>
            <strong>Returpolitik</strong><br />
            <%= @supplier.return_policy %>
          </div>

          <div>
            <strong>Bem&aelig;rkninger</strong><br />
            <%= @supplier.remarks %>
          </div>
        <% end %>
      </div>
    <% end %>

    <%= yield %>

    <% 2.times do %>
      <div id="bottom"<%= cycle '', raw(' class="hidden"') %>>
        <% if @orders %>
          <div id="actions">
            Med valgte:
            <input disabled="disabled" type="submit" value="Slet">
            <input disabled="disabled" type="submit" value="Kopi&eacute;r">
            <input disabled="disabled" type="submit" value="Bestilt af ...">
          </div>
        <% end %>

        <ul class="shop" id="nav">
          <%= render Supplier.shop %>
          <li><%= link_to '+', new_supplier_path %></li>
        </ul>
      </div>
    <% end %>
      
  </body>
</html>
