<table id="orders" data-supplier_id="<%= @supplier.id %>">
  <thead>
    <%= render 'index_header' %>
    <tr>
      <td></td>
      <td><%= DateTime.now.to_s(:short) %></td>
      <td><%= text_field :order, :created_by %></td>
      <td><%= text_field :order, :good %></td>
      <td><%= text_field :order, :size %></td>
      <td><%= text_field :order, :color %></td>
      <td><%= text_field :order, :quantity %></td>
      <td><%= text_field :order, :case_number %></td>
      <td><%= text_field :order, :ordered_at, :disabled => true %></td>
      <td><%= text_field :order, :ordered_by, :disabled => true %></td>
      <td><%= text_field :order, :remarks %></td>
    </tr>
  </thead>
  <tbody>
    <%= render @orders %>
  </tbody>
</table>
